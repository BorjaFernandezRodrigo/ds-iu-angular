{
    "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
    "plugins": ["stylelint-selector-bem-pattern"],
    "rules": {
        "plugin/selector-bem-pattern": {
            "preset": "bem",
            "componentName": "[A-Z]+",
            "componentSelectors": {
                "initial": "^\\.{componentName}(?:__[a-z]+(?:-[a-z]+)*)*(?:--[a-z]+(?:-[a-z]+)*)*$",
                "combined": "^\\.combined-{componentName}-[a-z]+(?:__[a-z]+(?:-[a-z]+)*)*(?:--[a-z]+(?:-[a-z]+)*)*$"
            },
            "utilitySelectors": "^\\.util-[a-z]+(?:-[a-z]+)*$"
        },
        "selector-class-pattern": [
            "^([a-z]+(?:-[a-z]+)*)(__[a-z]+(?:-[a-z]+)*)?(--[a-z]+(?:-[a-z]+)*)?$",
            {
                "message": "Selector should be written in BEM format (block__element--modifier)",
                "resolveNestedSelectors": true
            }
        ],
        "selector-id-pattern": [
            "^([a-z]+(?:-[a-z]+)*)(__[a-z]+(?:-[a-z]+)*)?(--[a-z]+(?:-[a-z]+)*)?$",
            {
                "message": "ID should be written in BEM format (block__element--modifier)"
            }
        ],
        "selector-max-compound-selectors": 3,
        "selector-max-id": 1,
        "selector-no-qualifying-type": [
            true,
            {
                "ignore": ["attribute", "class", "id"]
            }
        ],
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global", "local"]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer",
                    "config",
                    "plugin",
                    "use"
                ]
            }
        ],
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer",
                    "config",
                    "plugin",
                    "use",
                    "forward"
                ]
            }
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["composes"]
            }
        ]
    },
    "ignoreFiles": ["node_modules/**/*", "dist/**/*", "coverage/**/*", "**/*.js", "**/*.ts"]
}
